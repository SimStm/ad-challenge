    "version": "0.2.0",
    "configurations": [
        {
            "name": "adserver debug",
            "type": "node",
            "request": "launch",
            "args": [
                //"${relativeFile}"
                "./src/index.ts"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}/adserver-backend",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "console debug",
            "type": "node",
            "request": "launch",
            "args": [
                //"${relativeFile}"
                "./src/index.ts"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}/console-backend",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}